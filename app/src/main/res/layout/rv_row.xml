<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_rvProduct"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/margin"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/txt_rvProductID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding"
        android:layout_marginStart="@dimen/margin"
        android:text="ID"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize"
        android:layout_toRightOf="@id/img_rvProduct"/>

    <TextView
        android:id="@+id/txt_rvProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding"
        android:layout_marginStart="@dimen/margin"
        android:text="NAME"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize"
        android:layout_toRightOf="@id/img_rvProduct"
        android:layout_below="@id/txt_rvProductID"/>

    <TextView
        android:id="@+id/txt_rvProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding"
        android:layout_marginStart="@dimen/margin"
        android:text="PRICE"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize"
        android:layout_toRightOf="@id/img_rvProduct"
        android:layout_below="@id/txt_rvProductName"/>

</RelativeLayout>